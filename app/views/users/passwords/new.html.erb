<div class="min-w-full text-center">
  <h2 class="mb-5 text-5xl font-bold text-sky-400">Forgot your password?</h2>
  <div class="flex justify-center w-full">
    <ul class="w-1/2 text-sky-400 font-bold text-3xl ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "admins/shared/error_messages", resource: resource %>

        <li class=""><%= f.label :email %></li>
        <li class="w-full text-sky-950 selection:bg-sky-950 selection:text-sky-400 pb-5 pt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-96" %>
        </li>

        <li class="mb-4">
          <%= f.submit "Send me reset password instructions" %>
        </li>
      <% end %>

      <div class="block px-32 text-1xl text-sky-800">
        <%= render "admins/shared/links" %>
      </div>
    </ul>
  </div>
</div>
